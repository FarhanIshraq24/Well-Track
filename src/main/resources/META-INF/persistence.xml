<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="pharmacy-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity Classes -->
        <class>com.pharmacyfinder.model.Pharmacy</class>
        <class>com.pharmacyfinder.model.Medicine</class>
        <class>com.pharmacyfinder.model.PharmacyMedicineStock</class>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        
        <properties>
            <!-- Database connection properties will be set programmatically -->
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.connection.autocommit" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
