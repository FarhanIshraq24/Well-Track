<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.pharmacyfinder.HelloController" styleClass="root">
    
    <!-- Header -->
    <top>
        <VBox styleClass="header" spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-bar">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30" />
                </padding>
                
                <Label text="Welltrack" styleClass="app-title" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Button text="Dashboard" onAction="#onOpenWebInterface" styleClass="nav-button" />
                <Button text="Find Pharmacy" styleClass="nav-button" />
                <Button text="Settings" styleClass="nav-button" />
            </HBox>
            
            <Separator styleClass="header-separator" />
            
            <!-- Quick Search Bar -->
            <HBox alignment="CENTER" spacing="15" styleClass="search-bar">
                <padding>
                    <Insets top="15" right="30" bottom="20" left="30" />
                </padding>
                
                <Label text="Quick Search:" styleClass="search-label" />
                <TextField promptText="Search for medicines, pharmacies, or health info..." 
                          styleClass="search-field" prefWidth="400" />
                <Button text="Search" styleClass="search-button" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox styleClass="content-area">
            <padding>
                <Insets top="0" right="0" bottom="0" left="0" />
            </padding>
            
            <WebView fx:id="webView" />
        </VBox>
    </center>
    
    <!-- Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="status-bar">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30" />
            </padding>
            
            <Label text="Ready" styleClass="status-label" />
            
            <Region HBox.hgrow="ALWAYS" />
            
            <Label text="Welltrack v1.0 | Healthcare &amp; Medicine Tracker" styleClass="version-label" />
        </HBox>
    </bottom>
    
</BorderPane>
